{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/maas-backend/subscriptions/subscription",
  "description": "MaaS subscription schema",
  "definitions": {
    "newSubscription": {
      "$ref": "#/definitions/subscriptionBase",
      "required": [ "plan" ],
      "additionalProperties": true
    },
    "subscriptionUpdate": {
      "$ref": "#/definitions/subscriptionBase",
      "required": [ ],
      "additionalProperties": true
    },
    "subscriptionResponse": {
      "$ref": "#/definitions/subscriptionBase",
      "required": [ "plan", "terms" ],
      "additionalProperties": true
    },
    "subscriptionBase": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "./contact.json#/definitions/identityId"
        },
        "customerId": {
          "$ref": "./contact.json#/definitions/identityId"
        },
        "plan": {
          "$ref": "#/definitions/plan"
        },
        "addons": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/addon"
          }
        },
        "coupons": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/coupon"
          }
        },
        "terms": {
          "$ref": "#/definitions/terms"
        },
        "pointCost": {
          "$ref": "../../core/components/point-cost.json"
        },
        "region": {
          "$ref": "../../core/region.json"
        },
        "shippingAddress": {
          "$ref": "./subscriptionAddress.json"
        },
        "updateParams": {
          "type": "object"
        },
        "name": {
          "type": "string",
          "minLength": 2
        },
        "description": {
          "type": "string",
          "minLength": 2
        },
        "meta": {
          "type": "object"
        },
        "level": {
          "type": "integer",
          "minimum": 1
        },
        "wmpGrant": {
          "type": "integer",
          "minimum": 0
        },
        "active": {
          "type": "boolean"
        },
        "hidden": {
          "type": "boolean"
        },
        "selectable": {
          "type": "boolean"
        },
        "topUpId": {
          "type": "string",
          "minLength": 2
        }
      },
      "additionalProperties": true
    },
    "plan": {
      "description": "Customer subscription plan",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/subscriptionItemId"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "price": {
          "$ref": "#/definitions/price"
        }
      },
      "required": ["id"],
      "additionalProperties": true
    },
    "addon": {
      "description": "Customer subscription add-ons",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/subscriptionItemId"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "quantity": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100000,
          "default": 1
        },
        "unitPrice": {
          "$ref": "#/definitions/price"
        }
      },
      "required": ["id", "quantity"],
      "additionalProperties": true
    },
    "coupon": {
      "description": "Additional coupon that may provide discounts",
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/subscriptionItemId"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": ["id"]
    },
    "subscriptionItemId": {
      "description": "Identifier for matching the plans (Chargebee compat.)",
      "type": "string",
      "pattern": "^[^\\s\\/]{1,50}$"
    },
    "price": {
      "$ref": "../../core/components/cost.json"
    },
    "terms": {
      "description": "Terms related to this subscription",
      "type": "object",
      "properties": {
        "activated": {
          "$ref": "../../core/components/units.json#/definitions/time"
        },
        "modified": {
          "$ref": "../../core/components/units.json#/definitions/time"
        },
        "validity": {
          "description": "Subscription validity conditions",
          "type": "object",
          "properties": {
            "startTime": { "$ref": "../../core/components/units.json#/definitions/time" },
            "endTime": { "$ref": "../../core/components/units.json#/definitions/time" }
          },
          "required": ["startTime", "endTime"]
        },
        "scheduledChanges": {
          "type": "boolean",
          "default": false
        }
      },
      "required": ["validity"]
    }
  }
}
