{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.maas.global/maas-backend/subscriptions/card",
  "description": "MaaS region schema",
  "type": "object",
  "properties": {
    "issuer": {
      "type": "string",
      "minLength": 2,
      "maxLength": 255
    },
    "expiryMonth": {
      "type": "number",
      "minValue": 1,
      "maxValue": 12
    },
    "expiryYear": {
      "type": "number",
      "minValue": 2000
    },
    "maskedNumber": {
      "type": "string",
      "minLength": 4,
      "maxLength": 255
    },
    "fundingType": {
      "type": "string",
      "enum": ["credit", "debit", "prepaid", "not_known", "not_applicable"]
    },
    "billingCity": {
      "$ref": "./components/address.json#/definitions/city"
    },
    "billingCountry": {
      "$ref": "./components/address.json#/definitions/country"
    },
    "billingZip": {
      "$ref": "./components/address.json#/definitions/zipCode"
    }
  },
  "required": [ "id", "customerId", "status", "valid" ],
  "additionalProperties": false
}
